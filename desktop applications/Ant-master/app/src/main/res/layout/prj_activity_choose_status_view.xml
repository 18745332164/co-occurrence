<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
    style="@style/LibMatchMatch">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activityToolbar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:theme="@style/Toolbar"
        android:elevation="2dp"/>

    <Button
        android:id="@+id/loadingButton"
        style="@style/LibWrapWrap"
        android:layout_below="@+id/activityToolbar"
        android:text="Loading State"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/emptyButton"
        style="@style/LibWrapWrap"
        android:layout_below="@+id/loadingButton"
        android:text="Empty State"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/errorButton"
        style="@style/LibWrapWrap"
        android:layout_below="@+id/emptyButton"
        android:text="Error State"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/contentButton"
        style="@style/LibWrapWrap"
        android:layout_below="@+id/errorButton"
        android:text="Show Content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"/>
</RelativeLayout>